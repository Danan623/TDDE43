<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/emoji_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:id="@+id/emoji_cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="300dp">

    <ImageButton
        android:id="@+id/like_btn"
        android:clickable="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/like_emoticon"
        android:layout_marginLeft="0dp"
        android:scaleType="centerCrop"/>
    <ImageButton
        android:id="@+id/heart_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/heart_emoticon"
        android:layout_marginLeft="50dp"
        android:scaleType="centerCrop"/>
    <ImageButton
        android:id="@+id/surprised_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/suprised_emoticon"
        android:layout_marginLeft="100dp"
        android:scaleType="centerCrop"/>
    <ImageButton
        android:id="@+id/sad_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/sad_emoticon"
        android:layout_marginLeft="150dp"
        android:scaleType="centerCrop"/>
    <ImageButton
        android:id="@+id/amused_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/amused_emoticon"
        android:layout_marginLeft="200dp"
        android:scaleType="centerCrop"/>
    <ImageButton
        android:id="@+id/angry_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/angry_emoticon"
        android:layout_marginLeft="250dp"
        android:scaleType="centerCrop"/>



</androidx.cardview.widget.CardView>


</LinearLayout>